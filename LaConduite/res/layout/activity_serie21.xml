    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioGroupSerie21">
        
    </RadioGroup>
    
    

    
    
    
    
    
    
    
    
    
    
    
      <TextView
